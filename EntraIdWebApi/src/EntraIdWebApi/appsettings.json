{
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": "",
    "TenantId": "",
    "ClientId": "",
    "ClientSecret": "",
    "Audience": "api://your-client-id",
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "Scopes": [
      "https://graph.microsoft.com/User.Read",
      "https://graph.microsoft.com/Directory.Read.All",
